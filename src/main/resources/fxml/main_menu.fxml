<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: #1D1033;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.MainMenuController">

    <fx:include source="background_main.fxml" />

    <VBox alignment="CENTER" spacing="25" style="-fx-padding: 40; -fx-background-color: transparent;">
        <stylesheets>
            <URL value="@/css/styles.css" />
        </stylesheets>

        <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 60;" text="LIGHT BULB">
            <font>
                <Font size="24" />
            </font>
        </Label>

        <Button fx:id="easyButton" onAction="#handleDifficulty" prefHeight="35.0" prefWidth="200.0" styleClass="buttonMain" stylesheets="@../css/styles.css" text="Easy">
            <font>
                <Font size="21.0" />
            </font>
        </Button>

        <Button fx:id="mediumButton" onAction="#handleDifficulty" prefHeight="35.0" prefWidth="200.0" styleClass="buttonMain" stylesheets="@../css/styles.css" text="Medium">
            <font>
                <Font size="22.0" />
            </font>
        </Button>

        <Button fx:id="hardButton" onAction="#handleDifficulty" prefHeight="35.0" prefWidth="200.0" styleClass="buttonMain" stylesheets="@../css/styles.css" text="Hard">
            <font>
                <Font size="22.0" />
            </font>
        </Button>

        <Button fx:id="multiplayerButton" onAction="#startMultiplayer" prefHeight="35.0" prefWidth="200.0" styleClass="buttonMain" stylesheets="@../css/styles.css" text="Multiplayer">
            <font>
                <Font size="22.0" />
            </font>
        </Button>

        <Button fx:id="archiveButton" onAction="#openArchive" prefHeight="35.0" prefWidth="200.0" styleClass="buttonMain" stylesheets="@../css/styles.css" text="Archive">
            <font>
                <Font size="22.0" />
            </font>
        </Button>
    </VBox>
</StackPane>
