<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefWidth="600.0" style="-fx-background-color: #1D1033;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.HintsController">

    <fx:include source="background_pane.fxml" />

    <BorderPane>

        <center>
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <GridPane fx:id="gameGrid" gridLinesVisible="true" maxHeight="400" maxWidth="400" minHeight="400" minWidth="400" prefHeight="400" prefWidth="400" />
            </HBox>
        </center>
      <bottom>
          <HBox alignment="TOP_CENTER" prefHeight="79.0" prefWidth="800.0" BorderPane.alignment="CENTER">
              <Button alignment="TOP_CENTER" contentDisplay="CENTER" onAction="#closeHints" prefWidth="200.0" style="-fx-font-size: 16;" stylesheets="@../css/styles.css" text="CLOSE" />
          </HBox>
      </bottom>
    </BorderPane>
</StackPane>
