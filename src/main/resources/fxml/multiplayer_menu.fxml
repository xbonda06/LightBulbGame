<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" style="-fx-background-color: #1D1033;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.MultiplayerController">

    <fx:include source="background_main.fxml" />

    <VBox alignment="CENTER" spacing="25" style="-fx-padding: 40; -fx-background-color: transparent;">
        <stylesheets>
            <URL value="@/css/styles.css" />
        </stylesheets>

        <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 60;" text="DUMBBULB">
            <font>
                <Font size="24" />
            </font>
        </Label>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
            <Button fx:id="createButton" onAction="#createGame" prefHeight="35.0" prefWidth="200.0"
                    styleClass="buttonMain" stylesheets="@../css/styles.css" text="Create Game">
                <font>
                    <Font size="22.0"/>
                </font>
            </Button>

            <Button fx:id="joinGame" alignment="CENTER" contentDisplay="CENTER" onAction="#joinGame" prefHeight="35.0"
                    prefWidth="200.0" styleClass="buttonMain" stylesheets="@../css/styles.css" text="Join Game">
                <font>
                    <Font size="22.0"/>
                </font>
            </Button>
        </VBox>

        <Button fx:id="mainButton" onAction="#toTheMain" prefHeight="35.0" prefWidth="200.0" styleClass="buttonMain" stylesheets="@../css/styles.css" text="To The Main">
            <font>
                <Font size="22.0" />
            </font>
        </Button>
    </VBox>
</StackPane>
