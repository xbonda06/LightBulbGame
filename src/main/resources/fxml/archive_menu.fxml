<?import javafx.scene.layout.VBox?>
<StackPane prefWidth="600.0" style="-fx-background-color: #1D1033;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.ArchiveController">

    <fx:include source="background_pane.fxml" />

    <BorderPane>
        <bottom>
            <HBox alignment="TOP_CENTER" prefHeight="79.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                <Button alignment="TOP_CENTER" contentDisplay="CENTER" onAction="#toTheMain" prefWidth="200.0" style="-fx-font-size: 16;" stylesheets="@../css/styles.css" text="TO THE MAIN" />
            </HBox>
        </bottom>
      <top>
         <Label alignment="CENTER" contentDisplay="CENTER" text="Archive" textFill="WHITE" BorderPane.alignment="CENTER">
            <font>
               <Font size="48.0" />
            </font>
            <padding>
               <Insets top="10.0" />
            </padding>
         </Label>
      </top>
      <center>
         <ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" style="-fx-background: transparent; -fx-background-color: transparent;" BorderPane.alignment="CENTER">
             <VBox fx:id="contentBox" spacing="10.0" alignment="TOP_CENTER" style="-fx-background-color: transparent;" prefWidth="350">
             </VBox>
         </ScrollPane>
      </center>
    </BorderPane>
